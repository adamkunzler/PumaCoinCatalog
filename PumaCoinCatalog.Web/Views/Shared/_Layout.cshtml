    <script type="text/javascript">

        function setActiveMenu(menuTitle) {
            var a = $('nav.menu a[href="' + menuTitle +'"]');
            a.parent().addClass('active');
            a.parent().parent().addClass('in');
            a.parent().parent().parent().addClass('active open');
        };

        function resetMenu() {            
            $('nav.menu li').removeClass('active');
            $('nav.menu li').removeClass('open');
            $('nav.menu ul').removeClass('in');
        };

        function isNumeric(value) {
            return !isNaN(value - parseFloat(value));
        }

    </script>
